# Ansible managed: /etc/ansible/roles/cycloid.cron/templates/crontab.j2

# /etc/crontab: system-wide crontab
# Unlike any other crontab you don't have to run the `crontab'
# command to install the new version when you edit this file
# and files in /etc/cron.d. These files also have username fields,
# that none of the other crontabs do.

SHELL=/bin/sh
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

# m h dom mon dow user  command
{{ cron_crontab_time.hourly }}   root    cd / && run-parts --report /etc/cron.hourly
{{ cron_crontab_time.daily }}   root    test -x /usr/sbin/anacron || ( cd / && run-parts --report /etc/cron.daily )
{{ cron_crontab_time.weekly }}   root    test -x /usr/sbin/anacron || ( cd / && run-parts --report /etc/cron.weekly )
{{ cron_crontab_time.monthly }}   root    test -x /usr/sbin/anacron || ( cd / && run-parts --report /etc/cron.monthly )
